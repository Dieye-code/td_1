package exo3;

import java.util.Scanner;

public class Exo3 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		System.out.println("entrer le rayon du cercle ");

		int r1 = 0;

		do {
			try {
				r1 = Integer.parseInt(sc.next());
			} catch (Exception e) {
				System.out.println("Le rayon du cercle ne peut pas etre inferieur à 0");
			}
		} while (r1 <= 0);

		sc.close();

	}

}
