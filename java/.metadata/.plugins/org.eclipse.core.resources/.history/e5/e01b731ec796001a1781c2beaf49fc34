package exo22;

import java.util.Scanner;

public class Exo22 {

	public static void main(String[] args) {
		Scanner sc  = new Scanner(System.in);
		
		int n;
		System.out.println("entrer la taille du tableau");
		n = sc.nextInt();
		
		while(n<10 && n>50) {
			System.out.println("vous devez saisir un nombre compris entre 10 et 50");
			n = sc.nextInt();
		}
		
		int tab [] = new int[n];
		
		for (int i = 0; i < tab.length; i++) {
			System.out.println("entrer la valeur à l'indice "+i);
			tab[i] = sc.nextInt();
			while(tab[i]<0 && tab[i]>100) {
				System.out.println("vous devez saisir un nombre compris entre 1 et 100");
				tab[i]= sc.nextInt();
			}
		}
		
		sc.close();
	}

}
